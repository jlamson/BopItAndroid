<?xml version="1.0" encoding="utf-8"?>

<com.darkmoose117.bopit.widgets.GameView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <com.darkmoose117.bopit.widgets.FontTextView
        style="@style/GameView.ScoreView"
        android:id="@+id/game_score_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:fontFile="Roboto-Thin"
        android:text="@string/game_score_initial"
        android:layout_gravity="top|right"/>

    <com.darkmoose117.bopit.widgets.GameActionView
        style="@style/GameView.ActionView"
        android:id="@+id/game_action_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left" />

</com.darkmoose117.bopit.widgets.GameView>
<resources>
    <style name="BopIt" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Application theme. -->
    <style name="BopIt.Theme" parent="BopIt">
        <item name="android:actionBarStyle">@style/BopIt.ActionBar</item>
    </style>

    <!-- Action Bar-->
    <style name="BopIt.ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/purple</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Main Start Screen-->
    <style name="MainMenu" />

    <style name="MainMenu.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="fontFile">@string/lobster</item>
    </style>

    <style name="MainMenu.Button">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <!-- Game View -->
    <style name="GameView" />

    <style name="GameView.ActionView">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>


</resources>
